<% layout('../pageTempelate/index') -%>
    <% for(let camp of campList){ %> 
    <form  method="POST" action="/campground/edit/<%=camp._id%>?_method=PUT">
        <div class="row">
                <h1 class="text-center">New Camp</h1>
                <div class="col-md-6 offset-3 mb-3">
                    <form action="/campground" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" id="title" type="text" value="<%=camp.title%>" name="title">
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" value="<%=camp.location%>" name="location">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image URL</label>
                            <input type="text" class="form-control" id="image" name="image" value="<%=camp.image%>">
                        </div>
                        <div class="mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input type="text" class="form-control" id="Price" name="Price" value="<%=camp.Price%>">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea type="text" class="form-control" id="description" name="description"><%=camp.description%></textarea>
                        </div>
                        <button class="btn-primary col-12"> Edit</button>
                    </form>
                </div>
        </div>
     </form>
    <% } %> 
