<% layout('../pageTempelate/index') -%>
<% for(let camp of campList){ %> 
<div class="card" mb-3>
    <div class="row">
    <div class="col-md-4">
        <img class="img-fluid" src="<%= camp.image %>">
    </div>
    <div class="col-md-8">    
        <div class="card-body">
            <h5 class="card-title"><%=camp.title %> </h5>
            <h2><%=camp.location%></h2>
            
            <p class="card-text"><%=camp.description%></p>
            <p class="card-text"><%=camp.Price%></p>
            
            <form method="POST" action="/campground/<%=camp._id%>?_method=DELETE">
                <button>Delete</button>
            </form>
        </div>
    </div>
    <p>
        <a href="/campground/<%=camp._id %>/edit">Click to edit</a>
    </p>
    <% } %> 
    </div>    
</div>