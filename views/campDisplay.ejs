<% layout('../pageTempelate/index') -%>
    <% for(let camp of campList){ %> 
        <h1><%=camp.title %> </h1>
        <h2><%=camp.location%></h2>
        <img src="<%= camp.image %>">
        <p><%=camp.description%></p>
        <p><%=camp.Price%></p>
        <a href="/">Back to home</a>
    <form method="POST" action="/campground/<%=camp._id%>?_method=DELETE">
        <button>Delete</button>
    </form>
    <p>
        <a href="/campground/<%=camp._id %>/edit">Click to edit</a>
    </p>
    <% } %>     
